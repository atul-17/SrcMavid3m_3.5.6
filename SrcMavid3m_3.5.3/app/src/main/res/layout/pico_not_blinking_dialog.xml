<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/toolbar"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/toolbar_title"
                android:text="@string/putGBSToSAC"
               />

        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/margin"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/margin"
        android:gravity="center"
        android:id="@+id/refImageLyt"
        android:paddingLeft="@dimen/refPaddingLeft"
        android:paddingRight="@dimen/refPaddingRight"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/refPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/mavid_wifi"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/tv"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:layout_below="@+id/refImageLyt"
        android:text="@string/pressAndHoldForSAC"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/isGBSReady"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tv"
        android:id="@+id/status"
        android:textColor="@color/black"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/ok"
        android:textSize="18sp"
        android:layout_below="@+id/status"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/sirena_button" />

</RelativeLayout>
