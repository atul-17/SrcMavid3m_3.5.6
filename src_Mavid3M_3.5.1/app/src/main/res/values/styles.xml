    <style name="blackProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@android:color/black</item>
    </style>


    <style name="GradientProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/gradient_progress_drawable</item>
        <item name="android:indeterminate">true</item>
        <!--<item name="android:indeterminateTint" tools:targetApi="lollipop">@color/btn_app_dark_pink</item>-->
        <!--<item name="android:indeterminateTintMode" tools:targetApi="lollipop">src_in</item>-->
        <!--<item name="colorAccent">@color/btn_app_orange</item>-->
