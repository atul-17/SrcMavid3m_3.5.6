<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
        <stroke android:width="6dip" android:color="@color/light_grey" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="6dip" android:color="@color/light_grey" />
            <gradient android:angle="-90" android:startColor="@color/light_grey" android:endColor="@color/brand_orange" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />


            <stroke android:width="6dip" android:color="@color/light_grey" />
            <gradient android:angle="-90" android:startColor="@color/light_grey" android:endColor="@color/light_grey" />

        </shape>
    </item>
</selector>